<Window x:Class="OpenESRDiscPatcher.ProgressDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenESRDiscPatcher"
        mc:Ignorable="d"
        Title="Please wait..." Height="70" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" Topmost="True" Cursor="Wait" WindowStyle="None">
    <Grid>
        <Label Content="Patching/Unpatching in progress, please wait..." HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top"/>
        <ProgressBar Height="18" Margin="10,36,10,0" VerticalAlignment="Top" Value="-1" Minimum="-1" IsIndeterminate="True"/>

    </Grid>
</Window>
